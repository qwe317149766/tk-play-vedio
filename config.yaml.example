# MySQL 数据库配置
mysql:
  host: localhost
  port: 3306
  user: root
  password: ""
  database: test_db
  charset: utf8mb4
  autocommit: false
  max_connections: 10

# Redis 配置
redis:
  host: localhost
  port: 6379
  db: 0
  password: null  # 如果没有密码，使用 null
  decode_responses: true
  socket_timeout: 5
  socket_connect_timeout: 5
  max_connections: 50
  default_ex: null  # 默认过期时间（秒），null 表示不设置默认过期时间

